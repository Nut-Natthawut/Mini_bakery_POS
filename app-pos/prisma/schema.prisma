
generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  userID       String       @id @default(uuid())
  username     String       @unique
  passwordHash String
  fullName     String
  role         Role
  orders       Order[]

  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
}

model SystemConfig {
  configID          String   @id @default(cuid())
  taxRatePct        Decimal  @default(0.00) @db.Decimal(5, 2)
  defaultDiscountPct  Decimal  @default(0.00) @db.Decimal(5, 2)
  currency          String   @default("THB")
}

model Category {
  categoryID   String        @id @default(uuid())
  categoryName String
  menus        Menu_Category[]

  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

model Menu {
  menuID     String        @id @default(uuid())
  menuName   String
  price      Decimal       @db.Decimal(10, 2)
  menuDetail String?
  imageUrl   String?
  orders     Order_Menu[]
  categories Menu_Category[]

  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt
}

model Menu_Category {
  menuID     String
  categoryID String

  menu       Menu     @relation(fields: [menuID], references: [menuID])
  category   Category @relation(fields: [categoryID], references: [categoryID])

  @@id([menuID, categoryID])

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Order {
  orderID          String       @id @default(uuid())
  orderDescription String?
  orderDateTime    DateTime
  userID           String
  user             User?        @relation(fields: [userID], references: [userID])
  orderMenus       Order_Menu[]
  receipt          Receipt?

  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt
}

model Order_Menu {
  orderID  String
  menuID   String
  quantity Int

  order    Order @relation(fields: [orderID], references: [orderID])
  menu     Menu  @relation(fields: [menuID], references: [menuID])

  @@id([orderID, menuID])
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Receipt {
  receiptID       String    @id @default(uuid())
  orderID         String    @unique
  receiptDate     DateTime
  subtotal        Decimal   @db.Decimal(12, 2)
  discountAmount  Decimal   @db.Decimal(12, 2)
  taxAmount       Decimal   @db.Decimal(12, 2)
  grandTotal      Decimal   @db.Decimal(12, 2)
  amountPaid      Decimal   @db.Decimal(12, 2)
  changeAmount    Decimal   @db.Decimal(12, 2)
  paymentMethod   String

  order           Order     @relation(fields: [orderID], references: [orderID])

  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

model Report {
  reportID       String    @id @default(uuid())
  reportDate     DateTime  @db.Date
  reportType     String
  totalSales     Decimal   @db.Decimal(12, 2)
  numberOfOrders Int

  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

enum Role {
  Owner
  Staff
}